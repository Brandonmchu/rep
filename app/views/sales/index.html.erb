<h1 class="text-center">Toronto House Price Search</h1>
<p class="text-center lead">Find information on recent house & condo sales in the GTA</p>


	<%= form_tag root_path, method: :get, id:"search-form", class: 'form-inline', remote: true do %>
			<div class="search-block">
			<%= text_field_tag :address, "", class: 'form-control search-field', :placeholder => "Enter your Address" %>
	    <%= hidden_field_tag :latitude, 43.6405081  %>
	    <%= hidden_field_tag :longitude, -79.38070490000001  %>
			<%= submit_tag "Find Sales Near Me", onclick:"codeAddress()",class: "btn btn-success btn-inline search-button" %>

	<% end %>
		</div>


<table id="searchResults" class="table table-striped tablesorter">
	<thead>
		<th>Type</th>
		<th>Address</th>
		<th>Date Sold</th>
		<th>Size</th>
		<th>Sold Price</th>
		<th>List Price</th>
		<th>% of list</th>
	</thead>
	<tbody>
		<%= render 'sale', sales_near_by: @sales_near_by %>
	</tbody>
</table>