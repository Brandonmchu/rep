$("#searchResults tbody").html("<%= j render 'sale', sales_near_by: @sales_near_by %>");
$("#searchResults").trigger("update");
var sorting = [[2,1]]
$("#searchResults").trigger("sorton",[sorting]);


<% @sales_near_by.each_with_index do |sale, index| %>

	var infowindow<%= index %> = new google.maps.InfoWindow({
		content: "<%= j render 'infowindow', sale: sale %>"
	});

	var newmarker<%= index %> = new google.maps.Marker({
		position: new google.maps.LatLng(<%= sale.latitude %>, <%= sale.longitude %>),
		map: map
	});
	markers.push(newmarker<%= index %>);
	google.maps.event.addListener(newmarker<%= index %>, 'mouseover', function() {
		infowindow<%= index %>.open(map,newmarker<%= index %>);
	});
	google.maps.event.addListener(newmarker<%= index %>, 'mouseout', function() {
		infowindow<%= index %>.close(map,newmarker<%= index %>);
	});
<% end %>

